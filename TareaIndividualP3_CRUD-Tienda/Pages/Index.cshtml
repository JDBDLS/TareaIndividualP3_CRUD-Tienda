@page
@model IndexModel

@{
    ViewData["Title"] = "Lista de Productos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="/Products/Create">Crear Nuevo Producto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Products[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Products[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Products[0].Stock)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                <td>
                    <a asp-page="/Products/Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-page="/Products/Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-page="/Products/Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>